<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_vertical_margin"
    tools:context=".Activities.DetailActivity"
    android:orientation="vertical">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnCount="2"
            android:rowCount="2">

            <android.support.v4.widget.Space
                android:layout_height="@dimen/detail_view_padding_vertical"
                android:layout_columnSpan="2"
                android:layout_columnWeight="4"
                android:layout_rowWeight="1" />

            <TextView
                android:id="@+id/store_name_title"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:fontFamily="sans-serif"
                android:gravity="center_horizontal"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textColor="@color/detail_accent_label"
                android:textStyle="bold"
                android:layout_columnSpan="2"
                android:layout_columnWeight="1"
                android:layout_gravity="fill_horizontal"
                tools:text="Store Name" />
            <TextView
                android:id="@+id/detail_store_name"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:gravity="center_vertical"
                android:text="@string/name"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textColor="@color/detail_accent_label"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_rowWeight="1" />

            <TextView
                android:id="@+id/store_title"
                android:layout_width="0dp"
                android:fontFamily="sans-serif-light"
                android:gravity="center_vertical"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/detail_size"
                android:layout_columnWeight="20"
                android:layout_gravity="fill"
                tools:text="19" />


            <TextView
                android:id="@+id/address_textview"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:gravity="center_vertical"
                android:text="@string/address"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textColor="@color/detail_accent_label"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_rowWeight="1" />

            <TextView
                android:id="@+id/address"
                android:layout_width="0dp"
                android:fontFamily="sans-serif-light"
                android:gravity="center_vertical"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/detail_size"
                android:layout_columnWeight="20"
                android:layout_gravity="fill"
                tools:text="19" />


            <TextView
                android:id="@+id/detail_city_textview"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:gravity="center_vertical"
                android:text="@string/city"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textColor="@color/detail_accent_label"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_rowWeight="1" />

            <TextView
                android:id="@+id/city"
                android:layout_width="0dp"
                android:fontFamily="sans-serif-light"
                android:gravity="center_vertical"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/detail_size"
                android:layout_columnWeight="20"
                android:layout_gravity="fill"
                tools:text="19" />



            <TextView
                android:id="@+id/detail_postal_code_textview"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:gravity="center_vertical"
                android:text="@string/postal_code"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textColor="@color/detail_accent_label"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_rowWeight="1" />

            <TextView
                android:id="@+id/postal_code"
                android:layout_width="0dp"
                android:fontFamily="sans-serif-light"
                android:gravity="center_vertical"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/detail_size"
                android:layout_columnWeight="20"
                android:layout_gravity="fill"
                tools:text="19" />


            <TextView
                android:id="@+id/detail_telephone_textview"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:gravity="center_vertical"
                android:text="@string/telephone"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textColor="@color/detail_accent_label"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_rowWeight="1" />

            <TextView
                android:id="@+id/telephone"
                android:layout_width="0dp"
                android:fontFamily="sans-serif-light"
                android:gravity="center_vertical"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/detail_size"
                android:layout_columnWeight="20"
                android:layout_gravity="fill"
                tools:text="19" />


            <TextView
                android:id="@+id/detail_product_textview"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:gravity="center_vertical"
                android:text="@string/product_count"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textColor="@color/detail_accent_label"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_rowWeight="1" />

            <TextView
                android:id="@+id/products"
                android:layout_width="0dp"
                android:fontFamily="sans-serif-light"
                android:gravity="center_vertical"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/detail_size"
                android:layout_columnWeight="20"
                android:layout_gravity="fill"
                tools:text="19" />



            <TextView
                android:id="@+id/detail_inventory_count_textview"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:gravity="center_vertical"
                android:text="@string/inventory_count"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textColor="@color/detail_accent_label"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_rowWeight="1" />

            <TextView
                android:id="@+id/inventory"
                android:layout_width="0dp"
                android:fontFamily="sans-serif-light"
                android:gravity="center_vertical"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/detail_size"
                android:layout_columnWeight="20"
                android:layout_gravity="fill"
                tools:text="19" />


            <TextView
                android:id="@+id/detail_update_store_textview"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:gravity="center_vertical"
                android:text="@string/update"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textColor="@color/detail_accent_label"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_rowWeight="1" />

            <TextView
                android:id="@+id/update_store"
                android:layout_width="0dp"
                android:fontFamily="sans-serif-light"
                android:gravity="center_vertical"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/detail_size"
                android:layout_columnWeight="20"
                android:layout_gravity="fill"
                tools:text="19" />



            <TextView
                android:id="@+id/detail_inventory_price_textview"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:gravity="center_vertical"
                android:text="@string/inventory_price"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textColor="@color/detail_accent_label"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_rowWeight="1" />

            <TextView
                android:id="@+id/inventory_price"
                android:layout_width="0dp"
                android:fontFamily="sans-serif-light"
                android:gravity="center_vertical"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/detail_size"
                android:layout_columnWeight="20"
                android:layout_gravity="fill"
                tools:text="19" />


            <TextView
                android:id="@+id/detail_fax_textview"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:gravity="center_vertical"
                android:text="@string/fax"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textColor="@color/detail_accent_label"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_rowWeight="1" />

            <TextView
                android:id="@+id/fax"
                android:layout_width="0dp"
                android:fontFamily="sans-serif-light"
                android:gravity="center_vertical"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/detail_size"
                android:layout_columnWeight="20"
                android:layout_gravity="fill"
                tools:text="19" />


            <TextView
                android:id="@+id/detail_bilingual_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:gravity="center_vertical"
                android:text="@string/bilingual"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textColor="@color/detail_accent_label"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_rowWeight="1" />

            <TextView
                android:id="@+id/bilingual_services"
                android:layout_width="0dp"
                android:fontFamily="sans-serif-light"
                android:gravity="center_vertical"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/detail_size"
                android:layout_columnWeight="20"
                android:layout_gravity="fill"
                tools:text="19" />
            <TextView
                android:id="@+id/detail_tasting_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:gravity="center_vertical"
                android:text="@string/tasting"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textColor="@color/detail_accent_label"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_rowWeight="1" />

            <TextView
                android:id="@+id/tasting_bar"
                android:layout_width="0dp"
                android:fontFamily="sans-serif-light"
                android:gravity="center_vertical"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/detail_size"
                android:layout_columnWeight="20"
                android:layout_gravity="fill"
                tools:text="19" />
        </GridLayout>
    </LinearLayout>
